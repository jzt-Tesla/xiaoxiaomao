/* pages/profile/profile.wxss */
.container {
  padding: 32rpx;
  background: #fff;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  margin-bottom: 48rpx;
  position: relative;
}

.back-button {
  display: flex;
  align-items: center;
  position: absolute;
  left: 0;
  padding: 16rpx;
  background: #fff6f8;
  border-radius: 16rpx;
}

.back-icon {
  font-size: 36rpx;
  color: #ff85a2;
  margin-right: 8rpx;
}

.back-text {
  font-size: 28rpx;
  color: #ff85a2;
}

.title {
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.content {
  padding: 32rpx;
}

.placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 64rpx;
  background: #fff6f8;
  border-radius: 32rpx;
}

.placeholder-icon {
  font-size: 96rpx;
  margin-bottom: 32rpx;
}

.placeholder-text {
  font-size: 28rpx;
  color: #999;
}