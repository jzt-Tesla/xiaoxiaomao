.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: background-color 0.3s ease;
  padding: 32rpx;
}

.preview-section {
  flex: 1;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx;
  margin-bottom: 32rpx;
}

.preview-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  border-radius: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.controls-section {
  width: 100%;
  padding: 32rpx;
  display: flex;
  justify-content: space-around;
  background: rgba(255, 255, 255, 0.95);
  border-radius: 40rpx;
  box-shadow: 0 -4rpx 24rpx rgba(0, 0, 0, 0.08);
}

.action-button {
  width: 280rpx !important;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.action-button::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(45deg, rgba(255,255,255,0.2), rgba(255,255,255,0));
  border-radius: 44rpx;
}

.action-button:active {
  transform: scale(0.95);
}

.action-button.retake {
  background: #fff;
  color: #ff85a2;
  border: 4rpx solid #ff85a2;
  box-shadow: 0 4rpx 12rpx rgba(255, 133, 162, 0.2);
}

.action-button.retake::before {
  content: 'üì∏';
  margin-right: 8rpx;
}

.action-button.save {
  background: linear-gradient(45deg, #ff85a2, #ff9fb5);
  color: #fff;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 133, 162, 0.3);
}

.action-button.save::before {
  content: 'üíù';
  margin-right: 8rpx;
} 