<view class="container">
  <view class="light-grid">
    <view class="light-item warm" bindtap="selectLight" data-type="warm">
      <text class="light-icon">☀</text>
      <text class="light-name">暖光</text>
    </view>
    
    <view class="light-item cold" bindtap="selectLight" data-type="cold">
      <text class="light-icon">❄️</text>
      <text class="light-name">冷光</text>
    </view>
    
    <view class="light-item natural" bindtap="selectLight" data-type="natural">
      <text class="light-icon">⛅</text>
      <text class="light-name">自然光</text>
    </view>
    
    <view class="light-item sunset" bindtap="selectLight" data-type="sunset">
      <text class="light-icon">🌅</text>
      <text class="light-name">日落光</text>
    </view>
    
    <view class="light-item studio" bindtap="selectLight" data-type="studio">
      <text class="light-icon">🌈</text>
      <text class="light-name">补光颜色卡</text>
    </view>
    
    <view class="light-item custom" bindtap="navigateToCustom">
      <text class="light-icon">🎨</text>
      <text class="light-name">自定义补光</text>
    </view>
  </view>
</view> 