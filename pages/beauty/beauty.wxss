/* pages/beauty/beauty.wxss */
:root {
  --macaron-pink: #FFE4E1;
  --macaron-pink-dark: #FFD1CC;
  --macaron-pink-darker: #FFBEB7;
}

.container {
  padding: 20rpx;
  background-color: #FFE4E1;
  min-height: 100vh;
}

/* 顶部导航栏样式 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  width: 100%;
}

.back-button, .clear-button {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFE4E1;
  box-shadow: 5rpx 5rpx 10rpx #FFB5B5,
              -5rpx -5rpx 10rpx #FFF;
  transition: all 0.3s ease;
}

.back-button:active, .clear-button:active {
  box-shadow: inset 5rpx 5rpx 10rpx #FFB5B5,
              inset -5rpx -5rpx 10rpx #FFF;
}

.back-icon {
  font-size: 40rpx;
  color: #FF9999;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #FF9999;
}

.clear-button {
  font-size: 24rpx;
  color: #FF9999;
}

/* 品牌选择区域样式 */
.brand-section {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 40rpx 0;
  gap: 20rpx;
}

.cosmetic-icon {
  width: 60rpx;
  height: 60rpx;
}

.brand-text {
  font-size: 28rpx;
  color: #FF9999;
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  background: #FFE4E1;
  box-shadow: inset 5rpx 5rpx 10rpx #FFB5B5,
              inset -5rpx -5rpx 10rpx #FFF;
}

/* 输入框区域样式 */
.input-section {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin: 40rpx 0;
}

.input-box {
  border-radius: 25rpx;
  background: #FFE4E1;
  box-shadow: inset 5rpx 5rpx 10rpx #FFB5B5,
              inset -5rpx -5rpx 10rpx #FFF;
  padding: 20rpx 30rpx;
}

.input-box.large {
  height: 80rpx;
}

.input-box.small {
  height: 70rpx;
}

.input-box input {
  width: 100%;
  height: 100%;
  font-size: 28rpx;
  color: #FF9999;
  background: transparent;
}

.input-box input::placeholder {
  color: #FFBABA;
}

/* 搜索按钮样式 */
.search-button {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 40rpx auto;
  background: #FFE4E1;
  box-shadow: inset 5rpx 5rpx 10rpx #FFB5B5,
              inset -5rpx -5rpx 10rpx #FFF;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #FF9999;
  font-size: 28rpx;
  transition: all 0.3s ease;
}

.search-button:active {
  box-shadow: 5rpx 5rpx 10rpx #FFB5B5,
              -5rpx -5rpx 10rpx #FFF;
}