.color-picker-container {
  width: 100%;
  padding: 0 40rpx;
}

/* 预设颜色圆形选择区样式 */
.preset-colors {
  width: 100%;
  margin-bottom: 40rpx;
}

.color-circles {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.color-circle-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.color-circle {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 10rpx;
  transition: transform 0.2s ease;
}

.color-circle:active {
  transform: scale(0.95);
}

.color-name {
  font-size: 24rpx;
  color: #666;
  white-space: nowrap;
}

/* 渐变色滑动条样式 */
.gradient-slider {
  width: 100%;
  position: relative;
  height: 80rpx;
  display: flex;
  align-items: center;
}

.gradient-bar {
  width: 100%;
  height: 40rpx;
  border-radius: 20rpx;
  background: linear-gradient(to right, 
    rgb(255, 0, 0) 0%,
    rgb(255, 255, 0) 17%,
    rgb(0, 255, 0) 33%,
    rgb(0, 255, 255) 50%,
    rgb(0, 0, 255) 67%,
    rgb(255, 0, 255) 83%,
    rgb(255, 0, 0) 100%);
  position: relative;
  overflow: visible;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
}

/* 自定义滑块样式 */
.color-slider {
  width: 100%;
  height: 40rpx;
  position: absolute;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
  margin: 0;
}

/* 滑块圆点样式 */
.color-slider .wx-slider-handle {
  width: 60rpx !important;
  height: 60rpx !important;
  border-radius: 50% !important;
  background: #fff !important;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2) !important;
  top: 50% !important;
  transform: translateY(-50%) !important;
  margin-top: 0 !important;
} 